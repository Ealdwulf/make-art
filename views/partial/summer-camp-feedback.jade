.modal-overlay(ng-if='!feedbackOpen')
    .modal-inner.center.summercamp-feedback(ng-controller='SummerCampFeedbackController'
                                            ng-class='screen_no != 2 ? "badge-screen" : "form-screen"')

        button.cross &times;

        .screen(ng-if='screen_no == 1')
            .top
                h4.title Summer Camp Completed!
                h6.byline Give us some feedback to claim your badge

            .bottom
                .badge.locked

                .center

                    a.button.large.button-success(ng-click='next()') unlock badge


        .screen(ng-if='screen_no == 2')
            .top
                h4.title Make us better
                h6.byline And get a Summer Camp badge!

            .bottom
                ul
                    li.prompt
                        .question What did you like the most?
                        input.answer
                    li.prompt
                        .question What didn't you like?
                        input.answer
                    li.prompt
                        .question How likely are you to recommend Kano to a friend?
                        .answer.rating
                            ul.scale
                                - var n = 1
                                while n <= 10
                                    li.rating-number
                                        input(id=n type='radio' name='recommend' value=n)
                                        label(for=n)=n++
                            span.rating-label.left Never
                            span.rating-label.right Likely
                            .clear
                    li.prompt
                        .question What should we do next?
                        input.answer

                .center

                    a.button.large.button-success(ng-click='next()') Send and claim badge
